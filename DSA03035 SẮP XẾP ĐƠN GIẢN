#include <bits/stdc++.h>
using namespace std;
#define fast ios_base::sync_with_stdio(0); cin.tie(0); cout.tie(0);

int main() {
    fast;
    int n;
    cin >> n;
    vector <int> a(n+5), f(n+5,0);
    int res = 0;
    for (int i=1; i<=n; i++) cin >> a[i];
    for (int i=1; i<=n; i++){
        f[a[i]] = f[a[i]-1]+1;
        res = max(res, f[a[i]]);
    }
    cout << n - res;
    return 0;
}

