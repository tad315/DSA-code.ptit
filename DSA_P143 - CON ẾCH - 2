#include <bits/stdc++.h>
using namespace std;
#define boost ios_base::sync_with_stdio(0), cin.tie(0), cout.tie(0)
#define ll long long
#define endl '\n'
#define all(x) x.begin(), x.end()
#define pb push_back
#define mp make_pair
#define fi first
#define se second
const ll mod = 1e9 + 7;
int main()
{
    boost;
    int t;
    //cin >> t;
    t = 1;
    while (t--)
    {
        int n, k;
        cin >> n >> k;
        int h[n];
        for (int i = 0; i < n; ++i) cin >> h[i];
        vector<int> dp(n, 1e9);
        dp[0] = 0;
        for (int i = 1; i < n; ++i)
        {
            for (int j = 1; j <= k && i - j >= 0; ++j)
            {
                dp[i] = min(dp[i], dp[i - j] + abs(h[i] - h[i - j]));
            }
        }
        cout << dp[n - 1];
    }
    return 0;
}
