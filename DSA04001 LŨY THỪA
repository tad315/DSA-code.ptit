#include <bits/stdc++.h>
using namespace std;
#define boost ios_base::sync_with_stdio(0), cin.tie(0), cout.tie(0)
#define ll long long
#define endl '\n'
#define all(x) x.begin(), x.end()
#define pb push_back
#define mp make_pair
#define fi first
#define se second
const ll mod = 1e9 + 7;

ll calc(ll n, ll k)
{
    if (k == 0) return 1;
    ll res = calc(n, k / 2);
    res = (res * res) % mod;
    if (k % 2 == 0) return res;
    else return (res * n) % mod;
}
int main()
{
    boost;
    int t;
    cin >> t;
    while (t--)
    {
        ll n, k;
        cin >> n >> k;
        cout << calc(n, k) << endl;
    }
    return 0;
}
